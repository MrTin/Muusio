<script src="/js/soundmanager2-jsmin.js"></script>
<script src="/js/jquery.tinysort.min.js"></script>
<script src="/js/muusio.js"></script>

<script>
	MuusioPlayer.init();
</script>

<div id="controls">
	<div id="show-hide-controls">
		<a href="#" class="right">...</a>
		<div class="clear"></div>
	</div>

	<div id="hideable-controls">
		<div class="time-display left">
			<span id="current-time">00:00</span>/<span id="total-time">00:00</span>
		</div>

		<div id="track-name-display" class="left"></div>

		<input type="text" id="song-list-filter" value="" placeholder="Filter..." class="right" />
		<div id="volume" class="right show-hide-volume">
			<a href="#" class="typicn">u</a>
		</div>

		<div class="volume-control hidden">
			<input type="range" min="0" max="100" value="0" class="right" />
		</div>

		<div class="right hidden">
			<a href="#" id="upload-button">Upload</a> 
			<a href="#" id="show-available-downloads-button">Show Available Downloads</a> 
		</div>

		<div class="clear"></div>
	</div>

	<div id="prev-button" class="controls-button left previous typicn"></div>
	<div id="play-pause-button" class="controls-button left play"></div>
	<div id="song-progress-wrapper">
		<div id="song-progress" class="left"></div>
	</div>
	<div id="next-button" class="controls-button right next typicn"></div>
	<div class="clear"></div>
</div>

<div class="clear"></div>

<div id="available-song-list">None!</div>

<div id="song-list-headers">
	<div class="left song-title"><a href="#" id="sort-title">Title</a></div>
	<div class="left song-artist"><a href="#" id="sort-artist">Artist</a></div>
	<div class="left song-album"><a href="#" id="sort-album">Album</a></div>
	<div class="left song-sort-random"><a href="#" id="sort-random">Random</a></div>
	<div class="clear"></div>
</div>

<div id="song-list"></div>

<div class="show-hide-tabs">
	<div id="show-hide-queue" data-display-id="queue-display">Queue</div>
	<div id="show-hide-info" data-display-id="info-display">Info</div>
	<div id="show-hide-info" data-display-id="download-display">Torrent</div>
	<div id="show-hide-playlist" data-display-id="playlist-display">Playlist</div>
</div>

<div id="queue-display" class="right-panel">
	<h3>Queue</h3>
	<div id="queue-song-list"></div>
</div>

<div id="info-display" class="right-panel">
	<h3>Info</h3>
	<div class="loading"></div>
	<img src="" class="cover"/>
	<div class="text-info"></div>
</div>

<div id="download-display" class="right-panel">
	<h3>Download</h3>
	<input type="text" id="torrent-url" placeholder="Torrent URL" value="" />
	<input type="button" id="torrent-download" value="Go!" />

	<div class="text-info"></div>
</div>

<div id="playlist-display" class="right-panel">
	<h3>Playlists</h3>
	<input type="text" id="new-playlist-name" placeholder="Playlist..." value="" />
	<input type="button" id="new-playlist" value="Go!" />

	<div class="text-info"></div>
</div>


<script id="song-tmpl" type="text/x-jquery-tmpl">
	<div class="track" id="${file_hash}">
		<div class="left song-title">${id3.title}&nbsp;</div>
		<div class="left song-artist">${id3.artist}&nbsp;</div>
		<div class="left song-album">${id3.album}&nbsp;</div>
		<div class="left song-sort-random track-actions">
			<a href="#" class="queue-song typicn">z</a>
			<a href="#" class="open-file-location typicn">,</a>
			<a href="#" class="add-to-playlist typicn">&#35;</a>
		</div>
		<div class="clear"></div>
	</div>
</script>

<script id="available-song-tmpl" type="text/x-jquery-tmpl">
	<a href="#" class="available-song-download" data-file-hash="${file_hash}">Obtain ${file_name}</a><br />
</script>


<script id="queued-track-tmpl" type="text/x-jquery-tmpl">
	${id3.title}<br />
</script>


<script id="playlist-tmpl" type="text/x-jquery-tmpl">
	<div class="playlist-list-entry" data-id="${id}" id="playlist_${id}">
		<span class="select">${name}</span> <span class="delete">x</span>
		<div class="loading"></div>
		<ul class="song-list">
		</ul>
	</div>
</script>